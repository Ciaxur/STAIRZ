{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",

    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "jsx": "react",
    
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,

    "outDir": "dist/"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}